<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/approve_problem_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/text_dark_main"
        android:foreground="@drawable/ripple_accent_big_corner"
        app:cardBackgroundColor="@color/colorAccent"
        app:contentPadding="@dimen/space_base_greater_half"
        app:cardCornerRadius="45dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/approve_problem_preview_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send_white_42dp"/>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/success_problem_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:textSize="28sp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/text_dark_main"
        app:cardBackgroundColor="@color/colorSuccess"
        app:contentPadding="@dimen/space_base_greater_half"
        app:cardCornerRadius="45dp"
        app:cardElevation="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_accent_52dp"/>

    </android.support.v7.widget.CardView>


</FrameLayout>

