<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/approve_problem_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="32dp"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/text_dark_main"
        android:foreground="@drawable/ripple_accent_big_corner"
        app:cardBackgroundColor="@android:color/holo_green_light"
        app:contentPadding="@dimen/space_base_greater_quarter"
        app:cardCornerRadius="45dp"
        app:cardElevation="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_done_accent_32dp"/>

    </android.support.v7.widget.CardView>

</FrameLayout>

