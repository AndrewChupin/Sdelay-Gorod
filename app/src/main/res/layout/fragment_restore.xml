<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout3"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/restore_collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/white"
            app:expandedTitleMarginBottom="16sp"
            app:expandedTitleMarginStart="32dp"
            app:expandedTitleTextAppearance="@style/CollapsingToolbarExpandedTextStyleCommon"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@id/toolbar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:layout_collapseMode="pin"
                app:titleTextColor="@color/text_dark_main" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/restore_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restore_allow_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="@dimen/space_base"
                android:paddingBottom="@dimen/space_base"
                android:background="@drawable/selector_background_main_light_to_secondary"
                android:foreground="@drawable/ripple_main_light_secondary"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_light"
                android:text="Восстановить" />

            <TextView
                android:id="@+id/restore_deny_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="@dimen/space_base"
                android:paddingBottom="@dimen/space_base"
                android:background="@drawable/selector_background_main_light_to_secondary"
                android:foreground="@drawable/ripple_main_light_secondary"
                android:textColor="@color/colorDangerous"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_light"
                android:text="Удалить" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>