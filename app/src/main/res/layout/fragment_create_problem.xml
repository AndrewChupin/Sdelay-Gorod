<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_base"
            android:layout_marginBottom="@dimen/space_base"
            app:cardCornerRadius="@dimen/space_base"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_base"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/et_chat_message_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:hint="Введите описание"
                    android:layout_marginBottom="@dimen/space_base"
                    android:fontFamily="@font/roboto_light"
                    android:maxLines="12"
                    android:lines="2"
                    android:gravity="top"
                    android:paddingTop="@dimen/space_base_lower_half"
                    android:paddingBottom="@dimen/space_base"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Категория"
                    android:paddingTop="@dimen/space_base_greater_half"
                    android:paddingBottom="@dimen/space_base_lower_half"
                    android:fontFamily="@font/roboto_bold"
                    android:textAllCaps="true"
                    android:textColor="@color/text_dark_secondary"
                    android:textSize="15sp" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/space_base"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Изображения"
                    android:paddingTop="@dimen/space_base_greater_half"
                    android:paddingBottom="@dimen/space_base_lower_half"
                    android:fontFamily="@font/roboto_bold"
                    android:textAllCaps="true"
                    android:textColor="@color/text_dark_secondary"
                    android:textSize="15sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_base"
                            android:layout_marginBottom="@dimen/space_base"
                            android:layout_marginLeft="@dimen/space_base"
                            android:layout_marginRight="@dimen/space_base_quarter"
                            android:visibility="gone"
                            app:cardCornerRadius="0dp">

                            <ImageView
                                android:id="@+id/task_image_first"
                                android:layout_width="150dp"
                                android:layout_height="115dp"
                                android:scaleType="centerCrop"
                                tools:visibility="visible"/>

                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_base"
                            android:layout_marginBottom="@dimen/space_base"
                            android:layout_marginLeft="@dimen/space_base_quarter"
                            android:layout_marginRight="@dimen/space_base"
                            android:visibility="gone"
                            app:cardCornerRadius="0dp">

                            <ImageView
                                android:id="@+id/task_image_second"
                                android:layout_width="150dp"
                                android:layout_height="115dp"
                                android:scaleType="centerCrop"
                                tools:visibility="visible" />

                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="115dp"
                            android:layout_marginTop="@dimen/space_base"
                            android:layout_marginBottom="@dimen/space_base"
                            android:layout_marginLeft="@dimen/space_base_quarter"
                            android:layout_marginRight="@dimen/space_base"
                            app:cardCornerRadius="3dp">

                            <ImageView
                                android:src="@drawable/shape_gradient_blue"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:lines="2"
                                android:fontFamily="@font/roboto_light"
                                android:textColor="@color/text_light_main"
                                android:text="Добавить изображение"
                                android:textSize="14sp"
                                android:padding="@dimen/space_base"
                                android:gravity="center"
                                android:layout_gravity="center"
                                tools:visibility="visible" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/text_light_main"
                    android:background="@drawable/selector_circle_accent"
                    android:foreground="@drawable/ripple_accent"
                    android:layout_marginBottom="@dimen/space_base"
                    android:layout_marginTop="@dimen/space_base"
                    android:text="Создать"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</LinearLayout>