<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="@dimen/space_base"
    android:paddingBottom="@dimen/space_base"
    android:background="@drawable/selector_background_main_light_to_secondary"
    android:foreground="@drawable/ripple_main_light_secondary"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menu_image"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_person_gray_24dp"/>

    <Space
        android:layout_width="32dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/menu_title"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dark_main"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_light"
        android:text="Hello" />

</LinearLayout>